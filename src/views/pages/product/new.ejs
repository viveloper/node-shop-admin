<%- include('../../partials/header') -%>

<div
  class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
>
  <h1 class="h2">상품 추가</h1>
</div>

<form method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="product-name">상품 이름</label>
    <input type="text" class="form-control" id="product-name" name="name" />
  </div>
  <div class="form-group">
    <label for="product-price">상품 가격</label>
    <input type="number" class="form-control" id="product-price" name="price" />
  </div>
  <div class="form-group">
    <label for="product-image">상품 이미지</label>
    <input type="file" class="form-control" id="product-image" name="image" />
  </div>
  <div class="form-group">
    <label for="product-lastLoginAt">카테고리</label>
    <select class="form-control" name="category">
      <option value="5f3e95643c984d3ddcb527cb" selected>Notes</option>
      <option value="333">Clothes</option>
    </select>
  </div>
  <div class="form-group">
    <label for="product-info">상품 정보</label>
    <textarea class="form-control" id="product-info" name="info"></textarea>
  </div>
  <div class="float-right">
    <ul class="list-inline">
      <li class="list-inline-item">
        <button
          type="submit"
          id="edit-btn"
          class="btn btn-primary"
          formmethod="POST"
          formaction="/admin/product"
        >
          Submit
        </button>
      </li>
    </ul>
  </div>
</form>
<%- include('../../partials/footer') -%>
