<%- include('../../partials/header') -%>

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h1 class="h2">상품정보 수정</h1>
</div>

<form method="post" enctype="multipart/form-data">
  <div class="form-group">
    <label for="product-name">상품 아이디</label>
    <input
      type="text"
      readonly
      class="form-control"
      id="product-id"
      placeholder="사용자 이름"
      value="<%= product.id %>"
      name="id"
    />
  </div>
  <div class="form-group">
    <label for="product-name">상품 이름</label>
    <input
      type="text"
      class="form-control"
      id="product-name"
      placeholder="사용자 이름"
      value="<%= product.name %>"
      name="name"
    />
  </div>
  <div class="form-group">
    <label for="product-name">상품 이미지</label>
    <div>
      <img style="width: 350px; height: 350px" class="rounded img-fluid img-thumbnail" src="<%= product.img_url %>" />
    </div>
    <input type="file" class="form-control" id="product-name" placeholder="사용자 이름" name="image" />
  </div>
  <div class="form-group">
    <label for="product-price">상품 가격</label>
    <input type="number" class="form-control" id="product-price" value="<%= product.price %>" name="price" />
  </div>
  <div class="form-group">
    <label for="product-lastLoginAt">카테고리</label>
    <select class="form-control" name="category">
      <option value="5f3e95643c984d3ddcb527cb" <%= product.category == '5f3e95643c984d3ddcb527cb' ? 'selected' : '' %>>Notes</option>
      <option value="333" <%= product.category == '333' ? 'selected' : '' %>>Clothes</option>
    </select>
  </div>
  <div class="form-group">
    <label for="product-info">상품 정보</label>
    <textarea class="form-control" id="product-info" name="info"><%=product.info%></textarea>
  </div>
  <div class="form-group">
    <label for="product-createAt">생성 일시</label>
    <input
      disabled
      type="text"
      class="form-control"
      id="product-createAt"
      value="<%= product.createdAt.toISOString() %>"
      name="createAt"
    />
  </div>
  <div class="form-group">
    <label for="product-createAt">수정 일시</label>
    <input
      disabled
      type="text"
      class="form-control"
      id="product-createAt"
      value="<%= product.updatedAt.toISOString() %>"
      name="createAt"
    />
  </div>

  <div class="float-right">
    <ul class="list-inline">
      <li class="list-inline-item">
        <button type="submit" id="edit-btn" class="btn btn-primary" formmethod="POST" value="<%= product._id %>">
          Submit
        </button>
      </li>
      <li class="list-inline-item">
        <button
          type="submit"
          class="btn btn-danger"
          id="delete-btn"
          formaction="?_method=DELETE"
          formmethod="POST"
          value="<%= product._id %>"
        >
          Delete
        </button>
      </li>
    </ul>
  </div>
</form>
<%- include('../../partials/footer') -%>